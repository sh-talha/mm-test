<style>
.psc_icon_text{
  width: 100%;
  height: auto;
}
.psc_icon_text .container {
  max-width: 100%;
  margin: 0 auto;
  padding: 0;
}
.psc_icon_text h2 {
  text-align: center;
  font-family: Righteous;
  font-size: 76.143px;
  line-height: 93.44px; 
  letter-spacing: 0.768px;
  text-transform: uppercase;
  padding-bottom: 100px;
  margin: 0;
  font-weight: 800;
}
.psc_icon_text .icon_text_inner {
  display: grid;
  grid-template-columns: 30% 30% 30%;
  justify-content: center;
}
.psc_icon_text .block_col {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.psc_icon_text .icon_img {
  max-width: 100px;
}
.psc_icon_text .icon_img img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.psc_icon_text h3 {
  text-align: center;
  font-family: "Town 50 Chic";
  font-size: 50px;
  font-weight: 400;
  line-height: 93.44px;
  letter-spacing: 3px;
  text-transform: uppercase;
  margin-top: 50px;
}
.psc_icon_text span {
  display: block;
  max-width: 1100px;
  margin: 0 auto;
  padding: 60px 0;
}
.psc_icon_text span, 
.psc_icon_text span p {
  text-align: center;
  font-family: Inter;
  font-size: 22.404px;
  font-weight: 400; 
  line-height: 37.12px;
  letter-spacing: 0.64px;
}
@media screen and (max-width: 1320px){
.psc_icon_text h2 {
  font-size: 55.143px;
  line-height: 63.44px;
  padding-bottom: 50px;
}
.psc_icon_text .block_col {
    gap: 30px;
}
.psc_icon_text h3 {
  font-size: 40px;
  line-height: 48px;
  letter-spacing: 2.5px;
  margin-top: 30px;
}
.psc_icon_text span, .psc_icon_text span p {
  font-size: 20.404px;
  line-height: 28.12px;
}
.psc_icon_text span {
  max-width: 820px;
  padding: 30px 0;
}
}
@media screen and (max-width: 991px){
.psc_icon_text h2 {
  font-size: 40.143px;
  line-height: 48.44px;
  padding-bottom: 60px;
}
.psc_icon_text .block_col {
  gap: 0px;
}
.psc_icon_text .icon_img {
  max-width: 80px;
}
.psc_icon_text h3 {
  font-size: 30px;
  line-height: 38px;
  letter-spacing: 2px;
  margin-top: 10px;
}
.psc_icon_text span {
  max-width: 700px;
  padding: 0px 0;
}
.psc_icon_text span, .psc_icon_text span p {
  font-size: 18.404px;
  line-height: 26.12px;
}
}
@media screen and (max-width: 767px){
.psc_icon_text h2 {
  font-size: 30.143px;
  line-height: 36.44px;
  padding-bottom: 40px;
}
.psc_icon_text  .icon_text_inner {
  grid-template-columns: 1fr;
  gap: 20px;
}
.psc_icon_text span {
  max-width: 570px;
}
.psc_icon_text span, 
.psc_icon_text span p {
  font-size: 16px;
  line-height: 24.12px;
}
.psc_icon_text .container {
  padding: 0 20px;
}
} 
</style>
{%- style -%}
#psc_icon_text-{{ section.id }} h2 {
  color:{{ section.settings.font1_color }};
}
#psc_icon_text-{{ section.id }} h3,
#psc_icon_text-{{ section.id }} span p {
  color:{{ section.settings.font2_color }};
}
#psc_icon_text-{{ section.id }} {
  background-color: {{ section.settings.bg_color }}; 
  padding-top:{{ section.settings.desktop_padding_top }}px;
  padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
  margin-top:{{ section.settings.desktop_margin_top }}px;
  margin-bottom:{{ section.settings.desktop_margin_bottom }}px;
}
@media screen and (max-width: 991px) {
  #psc_icon_text-{{ section.id }} {
    padding-top:{{ section.settings.mbl_padding_top }}px;
    padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
    margin-top:{{ section.settings.mbl_margin_top }}px;
    margin-bottom:{{ section.settings.mbl_margin_bottom }}px; 
  }
}
{%- endstyle -%}
<section class="psc_icon_text" id="psc_icon_text-{{ section.id }}">
    <div class="container">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
        <div class="icon_text_inner">
          {% for block in section.blocks %} 
            <div class="block_col"> 
              {% if block.settings.icon_img != blank %}
                <div class="icon_img">
                  {{ block.settings.icon_img | image_url: width: block.settings.icon_img.width| image_tag: loading: 'lazy'}}
                 </div>
                {% endif %}
                {% if block.settings.icon_heading != blank %}
                  <h3>{{ block.settings.icon_heading }}</h3>
                {% endif %}
             </div>
          {% endfor %}
        </div>
        {% if section.settings.desc != blank %}
          <span>{{ section.settings.desc }}</span>
        {% endif %}
    </div>
</section>
