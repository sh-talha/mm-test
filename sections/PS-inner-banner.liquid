<style>
.ps_small-banner{
  background-color:{{section.settings.bg_color}};
  background-image:url({{section.settings.bg_img | img_url: 'master'}});
  display: flex;
  justify-content: space-between;
  height: 690px;
  margin-bottom: 80px;
}
.small_banner-left{
  width: 55%;
  height: 770px; 
} 
.case-study-banner .small_banner-left {
  width: 55%;
  height: auto !important; 
}
.small_banner-left img{
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.small_banner-right{
  width: 45%;
  padding: 140px 30px 20px 50px;
}
.ps_small-banner-simg .small_banner-left{
    width: 30%;
} 
    
.ps_small-banner-simg .small_banner-right{
  width: 70%;
}
.ps_small-banner-simg .small_banner-right h2{
    max-width: 800px;
}
.small_banner-right h3{
  font-family: "Town 50 Chic";
  font-size: 18.408px;
  font-style: normal;
  font-weight: 400;
  line-height: 25.6px;
  letter-spacing: 4.992px;
  text-transform: uppercase;
  margin: 0;
  color: #053527;
}
.small_banner-right h2 {
  color: #FFF;
  font-family: Righteous;
  font-size: 80.8px;
  font-style: normal;
  font-weight: 800;
  line-height: 100.92px;
  text-transform: uppercase;
  margin: 0;
  word-break: normal;
}
@media screen and (max-width: 1600px) {  
.small_banner-left {
  height: 740px;
}
.case-study-banner .small_banner-right h2 {
  font-size: 66.8px !important;
  line-height: 90.92px !important;
  max-width: 590px;
}
.small_banner-right h2 {
  font-size: 70.8px;
  line-height: 90.92px;
}
.ps_small-banner-simg .small_banner-right h2 {
  max-width: 540px;
}
}
@media screen and (max-width: 1380px) {
  .ps_small-banner {
    height: 650px;
}
  .small_banner-left {
    height: 700px;
}
  .small_banner-right { 
    width: 44%;
    padding: 100px 30px 20px;
}
.case-study-banner .small_banner-right h2 {
  font-size: 55.8px !important;
  line-height: 65.92px !important;
  max-width: 500px;
}
.small_banner-right h2 {
  font-size: 60.8px;
  line-height: 80.92px;
}
}
  
@media screen and (max-width: 1199px) {
.ps_small-banner {
  height: 600px;
}
.ps_small-banner-simg .small_banner-left {
  width: 100%;
}
.small_banner-left {
  width: 50%;
  height: 650px;
}
.small_banner-right {
  width: 50%;
}
.case-study-banner .small_banner-right h2 {
  font-size: 40.8px !important;
  line-height: 60.92px !important;
  max-width: 350px;
}
.small_banner-right h2 {
  font-size: 55.8px;
  line-height: 75.92px;
}
}
@media screen and (max-width: 991px) {
.ps_small-banner {
  height: auto;
  flex-direction: column;
}
.small_banner-left {
  width: 100%;
  height: auto;
}
.small_banner-right {
  width: 100%;
  padding: 50px;
}
.case-study-banner .small_banner-left {
  width: 100% !important;
  height: auto;
}
.case-study-banner .small_banner-right {
  width: 100% !important;
}
.small_banner-right h2 {
  font-size: 45.8px;
  line-height: 53.92px;
  max-width: 450px;
}
.ps_small-banner-simg .small_banner-right h2 {
  max-width: 340px;
}
}
@media screen and (max-width: 767px) {
.small_banner-right {
  padding: 30px;
}
.case-study-banner .small_banner-right {
  padding: 20px !important;
}
.case-study-banner .small_banner-right h2 {
  font-size: 38.8px !important;
  line-height: 46.92px !important;
}
.ps_small-banner-simg .small_banner-right h2 {
  max-width: 220px;
}
.small_banner-right h3 {
  font-size: 12.408px;
  line-height: 20.6px;
  letter-spacing: 3.992px;
}
.small_banner-right h2 {
  font-size: 30.8px;
  line-height: 38.92px;
  max-width: 280px;
}
}
</style>
<div class="ps_small-banner {{ section.settings.custom_class }} {% if section.settings.image_small %} ps_small-banner-simg {% endif %} ">
  <div class="small_banner-left">
    {% if section.settings.image != blank %}
     {{ section.settings.image | image_url:width:section.settings.image.width | image_tag:loading:'lazy' }}
    {% endif %}
  </div>
  <div class="small_banner-right">
    <h3>{{ section.settings.tagline }}</h3>
    <h2>{{ section.settings.heading }}</h2>
  </div>
</div>



{% schema %}
  {
    "name": "PS Inner banner",
    "settings": [
      {
        "type": "text",
        "id": "custom_class",
        "label": "Custom class"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#FFAD14"
      },
      {
        "type": "image_picker",
        "id": "bg_img",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Main Image"
      },
      {
        "type": "checkbox",
        "id": "image_small",
        "label": "Small Image?",
        "default": false
      },
      {
        "type": "text",
        "id": "tagline",
        "label": "Tagline",
        "default": "JOIN THE REVOLUTION"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Headline"
      }
    ],
    "presets": [
    {
      "name": "PS Inner banner"
    }
  ]
  }
{% endschema %}